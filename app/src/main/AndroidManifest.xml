<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dnk_user">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_dnk"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_dnk_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DNK_User">
        <activity
            android:name=".lop.BinhLuanLop"
            android:theme="@style/AddTheme"></activity>
        <activity
            android:name=".lop.DanhGia"
            android:theme="@style/AddTheme"/>
        <activity
            android:name=".hocvien.DoiMatKhauHocVien"
            android:theme="@style/AddTheme"/>
        <activity
            android:name=".hocvien.ThongTinHocVien"
            android:theme="@style/AddTheme" />
        <activity
            android:name=".lop.ThongTinLop"
            android:theme="@style/AddTheme" />
        <activity
            android:name=".khoahoc.KhoaHocActivity"
            android:theme="@style/AddTheme" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>